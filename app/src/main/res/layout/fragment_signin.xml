<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.example.fakhidean.kaigiapp.signin"
    android:background="@android:color/transparent"
    >

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="257dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginBottom="111dp"
        android:id="@+id/relativeLayout"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="115dp"
            android:id="@+id/fbButton"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/fb"
            android:layout_above="@+id/fbText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="115dp"
            android:id="@+id/mailButton"
            android:layout_gravity="left|center_vertical"
            android:background="@drawable/mail"
            android:layout_alignTop="@+id/fbButton"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="FACEBOOK"
            android:id="@+id/fbText"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/fbButton"
            android:layout_alignEnd="@+id/fbButton"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/textField"
            android:textSize="15dp"
            android:paddingTop="5dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="MAIL"
            android:id="@+id/mailText"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/textField"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/mailButton"
            android:layout_alignStart="@+id/mailButton"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="15dp"
            android:paddingTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIGN IN"
            android:id="@+id/signinText"
            android:textSize="25dp"
            android:textColor="@color/textField"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingTop="10dp" />


    </RelativeLayout>

</RelativeLayout>


